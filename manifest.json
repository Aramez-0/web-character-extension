{
  "manifest_version": 2,
  "name": "web_character_extension",
  "version": "1.0",
  "description": "Have a character in your web browser that interacts with the browser and yourself",
  
  "icons": {
    "48": "assets/img/extension_icon_48.png"
  },

  "permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
   {
    "matches": ["<all_urls>"],
    "js": ["content_scripts/character_control.js"]
   }
  ],

  "web_accessible_resources": [
    "assets/img/stick_character.png"
  ]
}